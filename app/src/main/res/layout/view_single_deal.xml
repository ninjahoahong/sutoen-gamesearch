<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deal_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/spacing_tiny"
    android:layout_margin="@dimen/spacing_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <ImageView
            android:id="@+id/deal_picture_imageview"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_tall"
            android:layout_weight="20"
            android:src="@android:drawable/sym_def_app_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="45"
            android:weightSum="100">

            <TextView
                android:id="@+id/deal_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"/>

            <TextView
                android:id="@+id/deal_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/font_small"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_tall"
            android:layout_weight="35">

            <ImageView
                android:id="@+id/deal_favourite_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@android:drawable/ic_dialog_email"/>

            <Button
                android:id="@+id/deal_buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/deal_favourite_imageview"
                android:layout_toEndOf="@+id/deal_favourite_imageview"
                android:textSize="@dimen/font_small"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>